# -------- Build Stage --------
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /app

# Copy solution and project files
COPY BroxDistribution1.sln ./
COPY BroxDistribution1/*.csproj ./BroxDistribution1/

# Restore dependencies for the solution
RUN dotnet restore

# Copy the rest of the code
COPY BroxDistribution1 ./BroxDistribution1

# Publish the project in Release mode
WORKDIR /app/BroxDistribution1
RUN dotnet publish -c Release -o /out

# -------- Runtime Stage --------
FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /app

# Copy published files from build stage
COPY --from=build /out .

# Render requires port 10000
ENV ASPNETCORE_URLS=http://0.0.0.0:10000
EXPOSE 10000

# Start the app
ENTRYPOINT ["dotnet", "BroxDistribution1.dll"]
