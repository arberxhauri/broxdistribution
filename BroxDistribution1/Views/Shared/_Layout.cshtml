      "@@context": "https://schema.org",
      "@@type": "Organization",
      "name": "Brox Distribution",
      "url": "https://broxdistribution.co.uk",
      "logo": "https://broxdistribution.co.uk/favicon-dark.ico",
      "description": "Premium wine distribution for HoReCa, retail and logistics in the UK.",
      "contactPoint": {
        "@@type": "ContactPoint",
        "contactType": "customer service",
        "telephone": "+44 7899 31864",
        "email": "info@broxdistribution.co.uk",
        "areaServed": ["GB"]
      }
    }
</script>


<script type="application/ld+json">
    {
      "@@context": "https://schema.org",
      "@@type": "LocalBusiness",
      "name": "Brox Distribution",
      "url": "https://broxdistribution.co.uk",
      "telephone": "+44 7899 313864",
      "address": {
        "@@type": "PostalAddress",
        "addressLocality": "London",
        "addressRegion": "England",
        "addressCountry": "GB"
      }
    }
</script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
