@using Microsoft.AspNetCore.Http.Extensions
@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="light">

    <title>@(ViewData["Title"] ?? "Brox Distribution")</title>

    <meta name="description"
          content="@(ViewData["MetaDescription"] ?? "Premium wine distribution for HoReCa, retail and logistics in the UK and Albania.")" />
    <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />

    <link rel="canonical" href="@Context.Request.GetDisplayUrl().Split('?')[0]" />

    <!-- Open Graph -->
    <meta property="og:title" content="@(ViewData["OgTitle"] ?? ViewData["Title"] ?? "Brox Distribution")" />
    <meta property="og:description" content="@(ViewData["OgDescription"] ?? ViewData["MetaDescription"] ?? "Premium wine distribution.")" />
    <meta property="og:type" content="@(ViewData["OgType"] ?? "website")" />
    <meta property="og:url" content="@Context.Request.GetDisplayUrl()" />
    <meta property="og:image" content="@(ViewData["OgImage"] ?? (Context.Request.Scheme + "://" + Context.Request.Host + "/lib/Images/logo.png"))" />
    <meta property="og:site_name" content="Brox Distribution" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="@(ViewData["OgTitle"] ?? ViewData["Title"] ?? "Brox Distribution")" />
    <meta name="twitter:description" content="@(ViewData["OgDescription"] ?? ViewData["MetaDescription"] ?? "Premium wine distribution.")" />
    <meta name="twitter:image" content="@(ViewData["OgImage"] ?? (Context.Request.Scheme + "://" + Context.Request.Host + "/lib/Images/logo.png"))" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.12.0/font/bootstrap-icons.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;600;700&family=Inter:wght@400;500;600&display=swap">
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Default favicon (fallback) -->
    <link rel="icon" href="~/favicon-light.ico" type="image/x-icon" sizes="any">

    <!-- Light mode favicon -->
    <link rel="icon" href="~/favicon-light.ico" type="image/x-icon" sizes="any"
          media="(prefers-color-scheme: dark)">

    <!-- Dark mode favicon -->
    <link rel="icon" href="~/favicon-dark.ico" type="image/x-icon" sizes="any"
          media="(prefers-color-scheme: light)">

</head>
<body>
<header>
    <!-- FIXED POSITION navbar - overlays content from beginning -->
    <nav class="navbar navbar-expand-lg navbar-wine navbar-light bg-light navbar-fixed-top shadow-sm">
    <div class="container">
            <a class="navbar-brand brand-serif" asp-controller="Home" asp-action="Index">
                <img style="width: 150px !important; height: auto; max-width: 150px; display: block; margin: 0 auto;"
                     src="~/lib/Images/logo.png"
                     alt="Brox Distribution Logo"/>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav" aria-controls="nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="nav">
                <div class="navbar-nav ms-auto">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="nav-link" asp-controller="Products" asp-action="Index">Our Wines</a>
                    <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                </div>
            </div>
        </div>
    </nav>
</header>

<!-- Add top padding to prevent main content from being hidden under navbar -->
<main>
    @RenderBody()
</main>

<footer class="footer-wine py-5">
    <div class="container">
        <div class="divider-gold mb-4"></div>
        <div class="row align-items-center text-center text-md-start">
            <div class="col-md-6">
                    <img class="m-0" style="width: 150px !important; height: auto; max-width: 150px; display: block; margin: 0 auto;"
                         src="~/lib/Images/white-logo.png"
                         alt="Brox Distribution Logo"/>
                <p class="text-muted small mb-0">&copy; @DateTime.Now.Year • Copyright Arbër Xhauri</p>
            </div>
        </div>
        <div class="divider-gold mt-4"></div>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Navbar scroll effect (optional enhancement)
    const navbar = document.querySelector('.navbar-wine');
    window.addEventListener('scroll', () => {
        if (window.pageYOffset > 50) {
            navbar.classList.add('scrolled');
        } else {
            navbar.classList.remove('scrolled');
        }
    });

    // Scroll reveal animations
    const revealObserver = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('revealed');
                revealObserver.unobserve(entry.target);
            }
        });
    }, { threshold: 0.1 });

    document.querySelectorAll('.section-card, .glass-card, .wine-card, .feature-card').forEach(el => {
        el.classList.add('scroll-reveal');
        revealObserver.observe(el);
    });
</script>

