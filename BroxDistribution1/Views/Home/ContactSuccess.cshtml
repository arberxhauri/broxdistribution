@{
    ViewData["Title"] = "Message Sent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding: 100px 0;">
    <div class="row">
        <div class="col-lg-6 mx-auto text-center">
            <div class="glass-card p-5">
                <div style="font-size: 5rem; color: var(--warm-gold); margin-bottom: 30px;">
                    <i class="bi bi-check-circle"></i>
                </div>
                <h1 class="brand-serif mb-4" style="font-size: 3rem; font-weight: 400;">Thank You!</h1>
                <p class="lead text-muted mb-4">
                    Your message has been received. We've sent a confirmation to your email and our team will respond within 24 hours.
                </p>
                <div class="d-flex gap-3 justify-content-center">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-wine">
                        <i class="bi bi-house me-2"></i>Back to Home
                    </a>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-outline-gold">
                        <i class="bi bi-wine-glass me-2"></i>Browse Wines
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>