@{
    ViewData["Title"] = "Brox Distribution";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .hero-wine {
        position: relative;
        min-height: 100vh;
        background: linear-gradient(135deg, rgba(20,10,5,0.8) 0%, rgba(40,20,10,0.9) 100%);
        display: flex;
        align-items: center;
        overflow: hidden;
    }

    .hero-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('images/banner.png');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        z-index: -2;
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, rgba(139,69,19,0.6) 0%, rgba(25,10,5,0.85) 50%, rgba(139,69,19,0.4) 100%);
        z-index: -1;
    }

    @@media (max-width: 768px) {
    .hero-background {
        background-attachment: scroll;
    }

    .hero-wine .container {
        padding-top: 120px;
        padding-bottom: 100px;
    }

    .hero-wine h1 {
        font-size: 3rem !important;
        line-height: 1.1;
        margin-bottom: 30px !important;
    }

    .hero-wine .lead {
        font-size: 1.1rem !important;
        margin-bottom: 40px !important;
    }

    .hero-wine .btn-lg {
        padding: 16px 40px !important;
        font-size: 1rem;
    }

    .badge-gold {
        font-size: 0.65rem !important;
        padding: 8px 20px !important;
    }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(40px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .scroll-reveal {
        opacity: 0;
        transform: translateY(40px);
        transition: all 0.8s ease-out;
    }

    .scroll-reveal.visible {
        opacity: 1;
        transform: translateY(0);
    }
</style>

<!-- Hero Section -->
<section class="hero-wine">
    <div class="hero-background">
        <div class="hero-overlay"></div>
    </div>

    <div class="container position-relative">
        <div class="row align-items-center" style="min-height: 85vh;">
            <div class="col-12 text-center">
                <!-- Badge hidden on mobile only -->
                <div class="mb-3 mb-md-5 d-none d-md-block" style="animation: fadeInUp 0.8s ease-out;">
                    <span class="badge badge-gold">PREMIUM WINE DISTRIBUTION</span>
                </div>

                <!-- Full original headline - always visible -->
                <h1 class="mb-3 mb-md-4" style="animation: fadeInUp 0.8s ease-out 0.1s both;">
                    Delivered with Care<br/>
                    <span class="text-gradient">Poured with Intention</span>
                </h1>

                <!-- Lead: hidden ONLY on tiny phones -->
                <p class="lead mx-auto mb-4 mb-md-5 d-none d-sm-block" style="animation: fadeInUp 0.8s ease-out 0.2s both;">
                    A bottle is not just wine. It's the taste of time, place and purpose.
                </p>

                <!-- Buttons: responsive width + sizing -->
                <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center align-items-center w-100" style="animation: fadeInUp 0.8s ease-out 0.3s both;">
                    <a asp-controller="Products" asp-action="Index" class="btn btn-wine btn-lg hero-btn flex-fill flex-sm-auto">
                        Collection
                    </a>
                    <a asp-controller="Home" asp-action="Contact" class="btn btn-outline-primary btn-lg hero-btn flex-fill flex-sm-auto">
                        Contact Us
                    </a>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- Services Section -->
<section style="padding: 120px 0; background: var(--soft-cream);">
    <div class="container">
        <div class="text-center mb-5 pb-5">
            <h2 class="section-title" style="font-size: clamp(2.5rem, 6vw, 3.5rem);">Our Services</h2>
        </div>

        <div class="row g-5">
            <div class="col-md-4">
                <div class="service-card scroll-reveal">
                    <div class="service-icon">
                        <i class="bi bi-building"></i>
                    </div>
                    <h4>HoReCa</h4>
                    <p>Specialized wine programs for hotels, restaurants, and cafés with dedicated account management.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card scroll-reveal">
                    <div class="service-icon">
                        <i class="bi bi-shop-window"></i>
                    </div>
                    <h4>Retail</h4>
                    <p>Premium selection and competitive wholesale pricing for discerning retail partners.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="service-card scroll-reveal">
                    <div class="service-icon">
                        <i class="bi bi-truck"></i>
                    </div>
                    <h4>Logistics</h4>
                    <p>Temperature-controlled storage and rapid delivery across Albania with meticulous care.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Simple CTA Section -->
<section style="padding: 120px 0; background: var(--pure-white);">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="section-title" style="font-size: clamp(2.5rem, 6vw, 3.5rem); margin-bottom: 30px;">Partner With Us</h2>
                <p class="section-subtitle" style="font-size: 1.15rem; margin-bottom: 50px;">
                    Join Albania's leading establishments in elevating their wine experience
                </p>
                <a asp-controller="Home" asp-action="Contact" class="btn btn-wine btn-lg">
                    <span>Get Started</span>
                    <i class="bi bi-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        });

        document.querySelectorAll('.scroll-reveal').forEach(el => {
            observer.observe(el);
        });
    });
</script>
