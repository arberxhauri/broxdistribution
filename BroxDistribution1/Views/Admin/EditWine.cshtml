@model BroxDistribution.Models.Wine

@{
    ViewData["Title"] = "Edit Wine";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mb-4">
    <div class="d-flex align-items-center gap-3 mb-3">
        <a asp-action="Wines" class="btn btn-outline-gold">
            <i class="bi bi-arrow-left"></i>
        </a>
        <div>
            <h1 class="brand-serif mb-0">Edit Wine</h1>
            <p class="text-muted mb-0">Update wine details</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="glass-card p-4">
            <form asp-action="EditWine" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ImageUrl" id="currentImageUrl" />
                <input type="hidden" asp-for="IsDeleted" />
                <input type="hidden" asp-for="DeletedAt" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Brand" class="form-label"></label>
                        <input asp-for="Brand" class="form-control" />
                        <span asp-validation-for="Brand" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Category" class="form-label"></label>
                        <select asp-for="Category" class="form-select">
                            <option value="">Select Category</option>
                            <option value="Red Wine">Red Wine</option>
                            <option value="White Wine">White Wine</option>
                            <option value="Rosé Wine">Rosé Wine</option>
                            <option value="Sparkling Wine">Sparkling Wine</option>
                            <option value="Dessert Wine">Dessert Wine</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Country" class="form-label"></label>
                        <input asp-for="Country" class="form-control" />
                        <span asp-validation-for="Country" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Region" class="form-label"></label>
                        <input asp-for="Region" class="form-control" />
                        <span asp-validation-for="Region" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Grape" class="form-label"></label>
                        <input asp-for="Grape" class="form-control" />
                        <span asp-validation-for="Grape" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Year" class="form-label"></label>
                        <input asp-for="Year" class="form-control" type="number" min="1900" max="2100" />
                        <span asp-validation-for="Year" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="AlcoholPercentage" class="form-label"></label>
                        <input asp-for="AlcoholPercentage" class="form-control" type="number" step="0.1" min="0" max="100" />
                        <span asp-validation-for="AlcoholPercentage" class="text-danger small"></span>
                    </div>
                    

                    <div class="col-12">
                        <label for="ImageFile" class="form-label">Change Wine Image (optional)</label>
                        <input type="file" name="ImageFile" id="ImageFile" class="form-control" accept="image/*" />
                        <small class="text-muted">Leave empty to keep current image. Max 5MB (JPG, PNG, WEBP)</small>
                    </div>

                    <div class="col-12">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                    
                    <div class="col-12">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <label class="form-label mb-0">Detailed Tasting Notes</label>
                            <button type="button" class="btn btn-sm btn-outline-gold" id="addTastingNote">
                                <i class="bi bi-plus-circle me-1"></i>Add Field
                            </button>
                        </div>
    
                        <div id="tastingNotesContainer">
                            <!-- Dynamic fields will be loaded here -->
                        </div>
                        <input type="hidden" asp-for="TastingNotesJson" id="tastingNotesJson" />
                        <small class="text-muted">Add specific attributes like Color, Aroma, Flavor, Body, Finish, etc.</small>
                    </div>

                    <div class="col-12">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-wine">
                                <i class="bi bi-check-circle me-2"></i>Update Wine
                            </button>
                            <a asp-action="Wines" class="btn btn-outline-gold">
                                Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="glass-card p-4">
            <h5 class="brand-serif mb-3">Current Image</h5>
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img id="currentImage" src="@Model.ImageUrl" alt="@Model.Name" class="w-100 mb-3" style="max-height: 300px; object-fit: contain; background: white; padding: 20px; border: 1px solid var(--light-gray);" />
            }
            else
            {
                <div id="noImagePlaceholder" class="text-center p-5 mb-3" style="background: var(--soft-cream); border: 1px solid var(--light-gray);">
                    <i class="bi bi-wine-glass display-4 text-muted"></i>
                    <p class="small text-muted mt-2">No image</p>
                </div>
            }

            <div id="newImagePreview" class="d-none">
                <h6 class="small text-muted mb-2">New Image Preview:</h6>
                <img id="previewImg" src="" alt="Preview" class="w-100 mb-3" style="max-height: 300px; object-fit: contain; background: white; padding: 20px; border: 1px solid var(--light-gray);" />
            </div>

            <div class="mt-3">
                <p class="small mb-1"><strong>Wine ID:</strong> #@Model.Id</p>
                @if (Model.IsDeleted)
                {
                    <p class="small mb-0 text-danger"><strong>Status:</strong> Deleted</p>
                }
                else
                {
                    <p class="small mb-0 text-success"><strong>Status:</strong> Active</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Image preview for new upload
        document.getElementById('ImageFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            const newImagePreview = document.getElementById('newImagePreview');
            const previewImg = document.getElementById('previewImg');

            if (file) {
                // Validate file size
                if (file.size > 5 * 1024 * 1024) {
                    alert('Image size must be less than 5MB');
                    this.value = '';
                    newImagePreview.classList.add('d-none');
                    return;
                }

                // Validate file type
                const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/webp', 'image/gif'];
                if (!allowedTypes.includes(file.type)) {
                    alert('Invalid file type. Please use JPG, PNG, WEBP, or GIF');
                    this.value = '';
                    newImagePreview.classList.add('d-none');
                    return;
                }

                const reader = new FileReader();
                reader.onload = function(e) {
                    previewImg.src = e.target.result;
                    newImagePreview.classList.remove('d-none');
                };
                reader.readAsDataURL(file);
            } else {
                newImagePreview.classList.add('d-none');
            }
        });
    </script>
    
    <script>
    let tastingNoteIndex = 0;
    
    // Common tasting note labels for quick selection
    const commonLabels = ['Color', 'Aroma', 'Flavor', 'Body', 'Tannins', 'Acidity', 'Finish', 'Food Pairing'];
    
    function createTastingNoteField(label = '', value = '') {
        const id = tastingNoteIndex++;
        const fieldHtml = `
            <div class="tasting-note-field mb-3" data-id="${id}">
                <div class="row g-2">
                    <div class="col-md-3">
                        <input type="text" 
                               class="form-control tasting-label" 
                               placeholder="e.g., Color" 
                               value="${label}"
                               list="labelSuggestions"
                               required />
                    </div>
                    <div class="col-md-8">
                        <input type="text" 
                               class="form-control tasting-value" 
                               placeholder="e.g., Deep ruby with purple rim" 
                               value="${value}"
                               required />
                    </div>
                    <div class="col-md-1">
                        <button type="button" class="btn btn-outline-danger btn-sm remove-tasting-note w-100" data-id="${id}">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                </div>
            </div>
        `;
        
        $('#tastingNotesContainer').append(fieldHtml);
        updateTastingNotesJson();
    }
    
    function updateTastingNotesJson() {
        const notes = [];
        $('.tasting-note-field').each(function() {
            const label = $(this).find('.tasting-label').val().trim();
            const value = $(this).find('.tasting-value').val().trim();
            if (label && value) {
                notes.push({ label: label, value: value });
            }
        });
        $('#tastingNotesJson').val(JSON.stringify(notes));
    }
    
    // Add field button
    $('#addTastingNote').click(function(e) {
        e.preventDefault();
        createTastingNoteField();
    });
    
    // Remove field button
    $(document).on('click', '.remove-tasting-note', function(e) {
        e.preventDefault();
        const id = $(this).data('id');
        $(`.tasting-note-field[data-id="${id}"]`).fadeOut(300, function() {
            $(this).remove();
            updateTastingNotesJson();
        });
    });
    
    // Update JSON on input change
    $(document).on('input', '.tasting-label, .tasting-value', function() {
        updateTastingNotesJson();
    });
    
    // Load existing data (for Edit page)
    $(document).ready(function() {
        // Add datalist for label suggestions
        $('body').append(`
            <datalist id="labelSuggestions">
                ${commonLabels.map(label => `<option value="${label}">`).join('')}
            </datalist>
        `);
        
        const existingJson = $('#tastingNotesJson').val();
        if (existingJson) {
            try {
                const notes = JSON.parse(existingJson);
                notes.forEach(note => {
                    createTastingNoteField(note.label, note.value);
                });
            } catch (e) {
                console.error('Failed to parse tasting notes:', e);
            }
        }
        
        // Add initial field if none exist
        if ($('.tasting-note-field').length === 0) {
            createTastingNoteField();
        }
    });
</script>

}
