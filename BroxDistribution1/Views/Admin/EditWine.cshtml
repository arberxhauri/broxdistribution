@model BroxDistribution.Models.Wine

@{
    ViewData["Title"] = "Edit Wine";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="mb-4">
    <div class="d-flex align-items-center gap-3 mb-3">
        <a asp-action="Wines" class="btn btn-outline-gold">
            <i class="bi bi-arrow-left"></i>
        </a>
        <div>
            <h1 class="brand-serif mb-0">Edit Wine</h1>
            <p class="text-muted mb-0">Update wine details</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="glass-card p-4">
            <form asp-action="EditWine" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="IsDeleted" />
                <input type="hidden" asp-for="DeletedAt" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Brand" class="form-label"></label>
                        <input asp-for="Brand" class="form-control" />
                        <span asp-validation-for="Brand" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Category" class="form-label"></label>
                        <select asp-for="Category" class="form-select">
                            <option value="">Select Category</option>
                            <option value="Red">Red</option>
                            <option value="White">White</option>
                            <option value="Rosé">Rosé</option>
                            <option value="Sparkling">Sparkling</option>
                            <option value="Dessert">Dessert</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Country" class="form-label"></label>
                        <input asp-for="Country" class="form-control" />
                        <span asp-validation-for="Country" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Region" class="form-label"></label>
                        <input asp-for="Region" class="form-control" />
                        <span asp-validation-for="Region" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Grape" class="form-label"></label>
                        <input asp-for="Grape" class="form-control" />
                        <span asp-validation-for="Grape" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Year" class="form-label"></label>
                        <input asp-for="Year" class="form-control" type="number" min="1900" max="2100" />
                        <span asp-validation-for="Year" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="AlcoholPercentage" class="form-label"></label>
                        <input asp-for="AlcoholPercentage" class="form-control" type="number" step="0.1" min="0" max="100" />
                        <span asp-validation-for="AlcoholPercentage" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="ImageUrl" class="form-label"></label>
                        <input asp-for="ImageUrl" class="form-control" placeholder="https://..." />
                        <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-wine">
                                <i class="bi bi-check-circle me-2"></i>Update Wine
                            </button>
                            <a asp-action="Wines" class="btn btn-outline-gold">
                                Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="glass-card p-4">
            <h5 class="brand-serif mb-3">Preview</h5>
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" class="w-100 mb-3" style="max-height: 300px; object-fit: contain; background: white; padding: 20px; border: 1px solid var(--light-gray);" />
            }
            else
            {
                <div class="text-center p-5" style="background: var(--soft-cream); border: 1px solid var(--light-gray);">
                    <i class="bi bi-wine-glass display-4 text-muted"></i>
                    <p class="small text-muted mt-2">No image</p>
                </div>
            }
            <div class="mt-3">
                <p class="small mb-1"><strong>Wine ID:</strong> #@Model.Id</p>
                @if (Model.IsDeleted)
                {
                    <p class="small mb-0 text-danger"><strong>Status:</strong> Deleted</p>
                }
                else
                {
                    <p class="small mb-0 text-success"><strong>Status:</strong> Active</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
