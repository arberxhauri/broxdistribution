@model IEnumerable<BroxDistribution.Models.ContactForm>

@{
    ViewData["Title"] = "Contact Forms";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="brand-serif">Contact Forms</h1>
        <p class="text-muted">Manage customer inquiries</p>
    </div>
    <div>
        <span class="badge" style="background: var(--warm-gold); color: var(--deep-charcoal); padding: 10px 15px;">
            Total: @Model.Count() messages
        </span>
    </div>
</div>

@if (!Model.Any())
{
    <div class="glass-card p-5 text-center">
        <i class="bi bi-inbox display-1 text-muted mb-3"></i>
        <h3 class="brand-serif mb-2">No Contact Forms</h3>
        <p class="text-muted">No customer inquiries yet</p>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var contact in Model)
        {
            <div class="col-12">
                <div class="glass-card p-4 @(contact.IsRead ? "" : "border-warning")" style="@(contact.IsRead ? "" : "border-width: 2px;")">
                    <div class="row align-items-center">
                        <div class="col-lg-8">
                            <div class="d-flex align-items-start gap-3">
                                <div style="width: 50px; height: 50px; background: var(--soft-cream); display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                                    <i class="bi bi-person fs-4" style="color: var(--warm-gold);"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-center gap-2 mb-1">
                                        <h5 class="mb-0">@contact.Name</h5>
                                        @if (!string.IsNullOrEmpty(contact.Company))
                                        {
                                            <span class="badge bg-secondary">@contact.Company</span>
                                        }
                                        @if (!contact.IsRead)
                                        {
                                            <span class="badge bg-warning text-dark">New</span>
                                        }
                                        @if (contact.IsReplied)
                                        {
                                            <span class="badge bg-success">Replied</span>
                                        }
                                    </div>

                                    <p class="text-muted small mb-2">
                                        <i class="bi bi-envelope me-1"></i>@contact.Email
                                        @if (!string.IsNullOrEmpty(contact.PhoneNumber))
                                        {
                                            <span class="ms-3"><i class="bi bi-telephone me-1"></i>@contact.PhoneNumber</span>
                                        }
                                    </p>

                                    @if (!string.IsNullOrEmpty(contact.WineName))
                                    {
                                        <div class="mb-2" style="background: #fff3cd; padding: 8px 12px; border-left: 3px solid var(--warm-gold);">
                                            <small>
                                                <i class="bi bi-wine-glass me-1"></i>
                                                <strong>Wine Inquiry:</strong> @contact.WineName
                                                @if (!string.IsNullOrEmpty(contact.WineBrand))
                                                {
                                                    <span> - @contact.WineBrand</span>
                                                }
                                                @if (contact.WineYear.HasValue)
                                                {
                                                    <span> (@contact.WineYear)</span>
                                                }
                                            </small>
                                        </div>
                                    }

                                    <p class="mb-2" style="color: var(--deep-charcoal);">
                                        @if (contact.Description.Length > 150)
                                        {
                                            @contact.Description.Substring(0, 150)<text>...</text>
                                        }
                                        else
                                        {
                                            @contact.Description
                                        }
                                    </p>

                                    <p class="small text-muted mb-0">
                                        <i class="bi bi-clock me-1"></i>Submitted @contact.SubmittedAt.ToString("MMM dd, yyyy 'at' hh:mm tt")
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
                            <div class="d-flex flex-column flex-lg-row gap-2 justify-content-lg-end">
                                <a asp-action="ContactDetails" asp-route-id="@contact.Id" class="btn btn-wine">
                                    <i class="bi bi-eye me-2"></i>View Details
                                </a>
                                <form asp-action="DeleteContact" asp-route-id="@contact.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this contact?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger w-100">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
