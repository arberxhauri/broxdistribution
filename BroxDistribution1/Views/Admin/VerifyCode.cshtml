@model BroxDistribution1.ViewModel.TwoFactorViewModel

@{
    ViewData["Title"] = "Two-Factor Authentication";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Brox Distribution</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.12.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background: linear-gradient(135deg, var(--rich-navy) 0%, var(--deep-charcoal) 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .verify-card {
            background: var(--pure-white);
            border: 1px solid var(--light-gray);
            padding: 50px;
            max-width: 500px;
            width: 100%;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        }
        .code-input {
            font-size: 2rem;
            text-align: center;
            letter-spacing: 15px;
            font-weight: bold;
            font-family: monospace;
        }
        .email-badge {
            background: var(--soft-cream);
            padding: 10px 15px;
            border-left: 4px solid var(--warm-gold);
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="verify-card">
        <div class="text-center mb-4">
            <div style="width: 80px; height: 80px; background: var(--soft-cream); margin: 0 auto 20px; display: flex; align-items: center; justify-content: center;">
                <i class="bi bi-shield-check" style="font-size: 2.5rem; color: var(--warm-gold);"></i>
            </div>
            <h1 class="brand-serif mb-2" style="font-size: 2rem; color: var(--deep-charcoal);">
                Verify Your Identity
            </h1>
            <p class="text-muted">Enter the 6-digit code sent to your email</p>
        </div>

        <div class="email-badge">
            <small class="text-muted">Code sent to:</small><br>
            <strong style="color: var(--deep-charcoal);">@Model.Email</strong>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            </div>
        }

        <form asp-action="VerifyCode" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="RememberMe" />
            
            <div class="mb-4">
                <label asp-for="Code" class="form-label">VERIFICATION CODE</label>
                <input asp-for="Code" 
                       class="form-control form-control-lg code-input" 
                       maxlength="6" 
                       placeholder="000000"
                       autocomplete="off"
                       autofocus />
                <span asp-validation-for="Code" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-wine w-100 btn-lg mb-3">
                <i class="bi bi-check-circle me-2"></i>Verify & Continue
            </button>

            <div class="text-center">
                <p class="small text-muted mb-2">Didn't receive the code?</p>
                <form asp-action="ResendCode" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-link text-decoration-none small">
                        <i class="bi bi-arrow-clockwise me-1"></i>Resend Code
                    </button>
                </form>
            </div>
        </form>

        <div class="text-center mt-4 pt-4" style="border-top: 1px solid var(--light-gray);">
            <a asp-action="Login" class="text-muted small">
                <i class="bi bi-arrow-left me-1"></i>Back to Login
            </a>
        </div>

        <div class="alert alert-info mt-4 mb-0" style="background: #e7f3ff; border-left: 4px solid #2196F3;">
            <small>
                <i class="bi bi-info-circle me-1"></i>
                <strong>Security Tip:</strong> The code expires in 10 minutes. Never share it with anyone.
            </small>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
    <script>
        // Auto-format code input (numbers only)
        document.querySelector('.code-input').addEventListener('input', function(e) {
            this.value = this.value.replace(/[^0-9]/g, '');
        });
    </script>
</body>
</html>
